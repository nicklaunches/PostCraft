{
  "name": "PostCraft",
  "version": "0.1.0",
  "private": false,
  "description": "Email Studio for Developers - Local studio dashboard, visual email builder, and SDK for rendering templates",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicklaunches/PostCraft.git"
  },
  "homepage": "https://github.com/nicklaunches/PostCraft",
  "bin": {
    "postcraft": "./bin/postcraft.js"
  },
  "files": [
    "dist",
    "lib",
    "components",
    "hooks",
    "app",
    "bin",
    "postcss.config.mjs",
    "tailwind.config.ts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "next dev",
    "dev:lib": "tsup --watch",
    "postcraft": "next dev -H 127.0.0.1 -p 3579",
    "build": "tsup && next build",
    "build:lib": "tsup",
    "start": "next start",
    "lint": "next lint",
    "db:push": "drizzle-kit push:pg",
    "db:generate": "drizzle-kit generate:pg",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.30.0",
    "geist": "^1.5.1",
    "lucide-react": "^0.546.0",
    "next": "^14.0.0",
    "postgres": "^3.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-email-editor": "^1.7.11",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "drizzle-kit": "^0.20.0",
    "eslint": "^8.50.0",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0"
  }
}
